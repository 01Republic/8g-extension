{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src/sdk/**/*", "src/blocks/**/*", "src/types/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts"]
}