{
  "name": "8g-monorepo",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "8G Extension and Webapp Monorepo",
  "scripts": {
    "dev": "pnpm run build:shared && pnpm run build:extension && pnpm --parallel --filter=\"{packages/*}\" run dev",
    "dev:extension": "pnpm --filter=scordi-extension run dev",
    "dev:webapp": "pnpm --filter=8g-webapp run dev",
    "build": "pnpm run build:shared && pnpm run build:extension && pnpm run build:webapp",
    "build:shared": "pnpm --filter=8g-shared run build",
    "build:extension": "pnpm --filter=scordi-extension run build",
    "build:webapp": "pnpm --filter=8g-webapp run build",
    "test": "pnpm --recursive run test",
    "test:run": "pnpm --recursive run test:run",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "format": "pnpm --recursive run format",
    "format:check": "pnpm --recursive run format:check",
    "clean": "pnpm --recursive run clean",
    "typecheck": "pnpm --recursive run typecheck",
    "publish:extension": "pnpm --filter=scordi-extension run build && cd packages/extension && npm publish",
    "release:extension": "pnpm --filter=scordi-extension run release"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "typescript": "~5.8.3",
    "eslint": "^9.36.0",
    "@eslint/js": "^9.36.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.44.0",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "shared"
  ],
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
